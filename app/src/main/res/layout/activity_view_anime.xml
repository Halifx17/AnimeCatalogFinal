<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_anime">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/VIEWTITLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/teal_700"
                android:text="ANIME DETAILS"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:id="@+id/editTextImageUrlView"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_alignTop="@+id/VIEWTITLE"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/AnimeNameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:text="Anime Name"
                android:layout_alignTop="@+id/editTextImageUrlView"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/editTextAnimeNameView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:textSize="15dp"
                android:text="Anime Name"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/editTextImageUrlView"
                android:layout_marginTop="280dp"
                android:gravity="center"
                android:background="@color/teal_700"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/GenresView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:text="Genres"
                android:layout_alignTop="@+id/editTextAnimeNameView"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/editTextAnimeGenresView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:textSize="15dp"
                android:text="Genres"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:layout_alignTop="@+id/editTextAnimeNameView"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>




            <TextView
                android:id="@+id/editTextAnimeSynopsisView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:textSize="15dp"
                android:text="Synopsis"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:maxLines="13"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:layout_alignTop="@+id/TitleSynopsis"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/TitleSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textSize="25dp"
                android:layout_alignTop="@+id/editTextAnimeGenresView"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/AnimeDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20dp"
                android:text="Date Aired"
                android:layout_alignTop="@+id/editTextAnimeSynopsisView"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/editTextAnimeDateView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Date Aired"
                android:textColor="@color/white"
                android:background="@color/teal_700"
                android:layout_alignTop="@+id/editTextAnimeSynopsisView"
                android:layout_marginTop="300dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/TitleCharacters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Characters"
                android:textSize="25dp"
                android:layout_alignTop="@+id/editTextAnimeDateView"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/editTextAnimeCharactersView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:ems="10"
                android:textSize="15dp"
                android:text="Characters"
                android:padding="10dp"
                android:background="@color/teal_700"
                android:layout_alignTop="@+id/editTextAnimeDateView"
                android:layout_marginTop="100dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/btnViewView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/editTextAnimeCharactersView"
                android:layout_alignLeft="@+id/editTextAnimeCharactersView"
                android:layout_alignTop="@+id/editTextAnimeCharactersView"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="40dp"
                android:text="HOME" />

            <Button
                android:id="@+id/btnEditView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editTextAnimeCharactersView"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/yellow"
                android:text="Edit"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"/>

            <Button
                android:id="@+id/btnDeleteView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/editTextAnimeCharactersView"
                android:layout_alignEnd="@+id/editTextAnimeCharactersView"
                android:layout_alignRight="@+id/editTextAnimeCharactersView"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/red"
                android:text="Delete" />






        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>